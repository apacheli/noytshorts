{
  "manifest_version": 2,
  "name": "No YouTube Shorts",
  "version": "2.0",
  "description": "Prefer the original video player instead of shorts.",
  "icons": {
    "48": "icons/48.png",
    "512": "icons/512.png"
  },
  "permissions": [
    "*://*.youtube.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/main.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/48.png",
      "512": "icons/512.png"
    },
    "default_popup": "src/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "a@b.com"
    }
  }
}
